/* padding - отступы
backgrpund - задний цвет
margin-bottom - нижний отступ */
.card {
    padding: 10px;
    background: wheat;   
    margin-bottom: 10px;  
}
/* front-size это размер выбраного элемента */
.card p {
font-size: 17px;
}
